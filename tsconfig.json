{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "none",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "lib": ["es2015", "dom", "dom.iterable"],
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "paths": {
    "*": ["src/global.d.ts"]
  }
}
